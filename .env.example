# YouTube channel feed (UC… ID for Compound Censored Official)
FEED_URL=https://www.youtube.com/feeds/videos.xml?channel_id=UCnaEIU-gr43C7oL3Bzu3dGg

# X API (user OAuth with tweet.write, media.write)
X_APP_KEY=
X_APP_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Teaser seconds (≤120 recommended)
TEASER_SECONDS=30

# Where to store last seen video id
STATE_FILE=/var/lib/yt2x/last.txt

# Hard-lock the posting account (recommended)
X_EXPECTED_USERNAME=censoreddottv
# Set to '1' to run without posting for tests
DRY_RUN=0

# Polling configuration
POLL_SECONDS=180
MAX_RETRIES=1
RETRY_DELAY_S=60

# Skip identity verification (for testing)
SKIP_IDENTITY_CHECK=0

# Allow fallback to link-only tweets if video upload fails
ALLOW_LINK_FALLBACK=1
